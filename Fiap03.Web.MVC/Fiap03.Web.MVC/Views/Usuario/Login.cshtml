@model Fiap03.Web.MVC.ViewModel.UsuarioViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Identifique-se!</h2>

@Html.ValidationSummary()
@using (Html.BeginForm())
{
    @Html.HiddenFor(u => u.Url)
    <div class="form-group">
        @Html.LabelFor(u => u.Login)
        @Html.TextBoxFor(u => u.Login, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Senha)
        @Html.PasswordFor(u => u.Senha, new { @class = "form-control "})
    </div>
    @Fabrica.Botao("Entrar")
}

